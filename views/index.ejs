<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>StudentMaster</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/index.css" />
  </head>
  <body>
    <div class="wrapper">
      <div class="container">
        <div class="heading mb-4">
          <h1>StudentMaster</h1>
        </div>
        <div class="row mx-0">
          <div class="col-12 mb-5 col-xl-5 mb-xl-0">
            <div class="form-div">
              <% if(showAddData){%> <%# Add student %>
              <div class="form-container">
                <h2>Add Student</h2>
                <form method="post" action="/sendData">
                  <div class="form-group">
                    <label for="fname">First Name:</label>
                    <input
                      type="text"
                      id="fname"
                      name="fname"
                      placeholder="Enter your first name"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="lname">Last Name:</label>
                    <input
                      type="text"
                      id="lname"
                      name="lname"
                      placeholder="Enter your last name"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="age">Age:</label>
                    <input
                      type="number"
                      id="age"
                      name="age"
                      placeholder="Enter your age"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="gender">Gender:</label>
                    <input
                      type="text"
                      id="gender"
                      name="gender"
                      placeholder="Enter your gender"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="marks">Marks:</label>
                    <input
                      type="number"
                      id="marks"
                      name="marks"
                      placeholder="Enter your marks"
                      required
                    />
                  </div>
                  <button type="submit" class="submit-btn">Add</button>
                </form>
              </div>
              <%}else{%> <%# Update Data %>
              <div class="form-container">
                <a href="/" class="exit-btn" title="Add Student">
                  <i class="fa-solid fa-right-from-bracket"></i>
                </a>
                <h2>Update Student</h2>
                <form
                  method="post"
                  action="/updateData?stdName=<%=std.firstName%>"
                >
                  <div class="form-group">
                    <label for="fname">First Name:</label>
                    <input
                      type="text"
                      id="fname"
                      value="<%= std.firstName%>"
                      name="updateFName"
                      placeholder="Enter your first name"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="lname">Last Name:</label>
                    <input
                      type="text"
                      id="lname"
                      value="<%= std.lastName%>"
                      name="updateLName"
                      placeholder="Enter your last name"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="age">Age:</label>
                    <input
                      type="number"
                      id="age"
                      value="<%= std.Age%>"
                      name="updateAge"
                      placeholder="Enter your age"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="gender">Gender:</label>
                    <input
                      type="text"
                      id="gender"
                      value="<%= std.Gender%>"
                      name="updateGender"
                      placeholder="Enter your gender"
                      required
                    />
                  </div>
                  <div class="form-group">
                    <label for="marks">Marks:</label>
                    <input
                      type="number"
                      id="marks"
                      value="<%= std.Marks%>"
                      name="updateMarks"
                      placeholder="Enter your marks"
                      required
                    />
                  </div>
                  <div>
                    <button type="submit" class="submit-btn">Update</button>
                  </div>
                </form>
              </div>
              <%}%>
            </div>
          </div>
          <div class="col-12 col-xl-7">
            <div class="table-div">
              <h2>Student Data</h2>
              <div class="table-outer">
                <table>
                  <thead>
                    <tr>
                      <th>First Name</th>
                      <th>Last Name</th>
                      <th>Age</th>
                      <th>Gender</th>
                      <th>Marks</th>
                      <th>Actions</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% student.map((i) => { %>
                    <tr>
                      <td><%= i.firstName %></td>
                      <td><%= i.lastName %></td>
                      <td><%= i.Age %></td>
                      <td><%= i.Gender %></td>
                      <td><%= i.Marks %></td>
                      <td class="action-btn">
                        <a
                          href="/deleteStd?stdName=<%=i.firstName%>"
                          class="delete-btn"
                          title="Delete"
                        >
                          <i class="fas fa-trash-alt"></i>
                        </a>
                        <a
                          href="/updateStd?stdName=<%=i.firstName%>"
                          class="update-btn"
                          title="Update"
                        >
                          <i class="fas fa-edit"></i>
                        </a>
                      </td>
                    </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
